<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/profile_state"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/profile_icon"
        android:layout_marginTop="30sp"
        android:gravity="center"
        android:text="상태"
        android:textSize="20sp"
        android:background="#FFFAFAFA"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40sp"
        android:layout_below="@id/profile_state">

        <Button
            android:id="@+id/state_updateBtn"
            style="?attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="77dp"
            android:gravity="center"
            android:text="@string/stateUpdateButton"
            android:textSize="15sp" />

        <Button
            android:id="@+id/profile_changeBtn"
            style="?attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="79dp"
            android:layout_alignBottom="@id/state_updateBtn"
            android:gravity="center"
            android:text="@string/photoUpdateButton"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60sp">

        <Button
            android:id="@+id/logout_button"
            style="?attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="73dp"
            android:text="@string/logout" />
    </RelativeLayout>

</RelativeLayout>