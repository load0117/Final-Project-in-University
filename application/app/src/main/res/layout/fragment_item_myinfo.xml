<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="276dp"
        android:src="@drawable/ic_bot"/>

    <TextView
        android:id="@+id/profile_state"
        android:layout_width="59dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="293dp"
        android:gravity="center"
        android:text="상태" />

    <Button
        android:id="@+id/state_updateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="210dp"
        android:layout_toStartOf="@id/profile_icon"
        android:gravity="center"
        android:textSize="15sp"
        android:background="#FFFFFF"
        android:text="@string/stateUpdateButton" />

    <Button
        android:id="@+id/profile_changeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="210dp"
        android:layout_toEndOf="@id/profile_icon"
        android:gravity="center"
        android:textSize="15sp"
        android:background="#FFFFFF"
        android:text="@string/photoUpdateButton" />

</RelativeLayout>