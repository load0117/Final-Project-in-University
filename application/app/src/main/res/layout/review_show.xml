<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_block_border"
    android:orientation="vertical"
    android:padding="1dp">

    <!-- 여기에는 리뷰-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/profile_show"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_base_profile"
            android:contentDescription="@string/profileIcon" />

        <TextView
            android:id="@+id/review_userEmail"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/profile_show"
            android:layout_marginStart="14sp"
            android:fontFamily="@font/godom"
            android:layout_marginTop="5sp"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/review_user_uid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <TextView
            android:id="@+id/review_uid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/review_more"
            android:layout_width="48dp"
            android:layout_height="48sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/dot"
            android:src="@drawable/ic_more_horiz_black_24dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <ImageView
            android:id="@+id/review_timeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="13dp"
            android:contentDescription="@string/clock"
            android:src="@drawable/review_clock" />

        <TextView
            android:id="@+id/review_writtenTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/review_timeIcon"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/godom"
            android:gravity="center"
            android:textSize="12sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/review_contents"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:fontFamily="@font/godom"
        android:background="@drawable/bg_textview_border"
        android:gravity="center" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/review_rating_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/review_rating_num"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/review_rating"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="25sp" />
    </LinearLayout>


</LinearLayout>