<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_block_border"
    android:orientation="vertical">

    <!-- 여기에는 리뷰-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        <!--todo 아이디와 더 보기 이미지-->

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_alignParentTop="true"

            android:src="@drawable/ic_heart_like" />

        <TextView
            android:id="@+id/review_id_show"
            android:layout_width="68dp"
            android:layout_height="40sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="74dp"
            android:gravity="center"
            android:text="@string/review_id" />

        <ImageView
            android:id="@+id/review_more"
            android:layout_width="38dp"
            android:layout_height="40sp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/dot"
            android:src="@drawable/ic_more_horiz_black_24dp" />

    </RelativeLayout>
    <TextView
        android:id="@+id/review_screen"
        android:layout_width="match_parent"
        android:layout_height="170sp"
        android:background="@drawable/bg_textview_border"
         />

    <!-- 평점 버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/review_likeBtn"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:src="@drawable/ic_heart_like"
            android:background="@color/bg_message_board"
            android:layout_weight="1"
            android:contentDescription="@string/reviewWriteBtn" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10sp"
        android:background="#878787"/>
</LinearLayout>