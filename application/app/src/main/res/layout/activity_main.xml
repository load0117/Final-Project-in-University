<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.twolee.chatbot.MainActivity">

    <include
        android:id="@+id/mainActivity_toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/mainActivity_layout_scanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainActivity_toolbar"
        android:gravity="center">

        <Button
            android:id="@+id/mainActivity_scanner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@drawable/bg_bot_message_box"
            android:drawableStart="@drawable/ic_face_scanner"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:text="@string/sentimentScanner"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainActivity_layout_scanner"
        tools:ignore="UnknownId"></FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/select_bottom_navigation"
        app:itemTextColor="@drawable/select_bottom_navigation"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:menu="@menu/bottom_navigation_main" />

</RelativeLayout>
