<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.twolee.chatbot.MainActivity">


    <include
        android:id="@+id/mainactivity_toolbar"
        layout="@layout/toolbar" />

    <Button
        android:id="@+id/mainactivity_scanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainactivity_toolbar"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="감정 스캐너"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        tools:ignore="UnknownId" />

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainactivity_scanner"
        tools:ignore="UnknownId"></FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/select_bottom_navigation"
        app:itemTextColor="@drawable/select_bottom_navigation"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:menu="@menu/bottom_navigation_main" />
</RelativeLayout>
